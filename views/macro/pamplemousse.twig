{% macro french_month(month_number) %}
	{% set month_index = month_number|number_format - 1 %}
	{% set months = ["Janvier", "Février", "Mars", "Avril", "Mai", "Juin", "Juillet", "Août", "Septembre", "Octobre", "Novembre", "Décembre"] %}
	{{ months[month_index] }}
{% endmacro %}

{% macro french_month_year(date) %}
	{% set parts = date|split('-') %}
	{% set year = parts[0] %}
	{{ _self.french_month(parts[1]) ~ " " ~ year }}
{% endmacro %}

{% macro french_date(date) %}
    {{ date|date("d") ~ _self.french_month(date|date("m")) ~ date|date("Y") }}
{% endmacro %}
