{% extends "admin/templates/base.html" %}

{% block sidebar %}
    <div class="panel panel-default">
        <div class="panel-heading">Upload de fichier</div>

        <div class="panel-body">
            <form action="{{ path('file-upload') }}" class="dropzone"></form>
        </div>
    </div>
{% endblock %}

{% block page_content %}
        <div class="panel panel-default">
            <div class="panel-heading"><h1>Images</h1></div>
            <div class="panel-body">

                <div id="gallery">
                    {% for photo in photos %}
                        <div class="item">

                            <div class="image">
                                {% if photo.is_favorite %}<span class="favorite glyphicon glyphicon-star"></span>{% endif %}
                                <a href="{{ photo.url }}"><img src="{{ path('thumbnail', { 'photo': photo.id, 'width': '200', 'height': '200' }) }}" alt="{{ photo.filename }}" /></a>
                            </div>

                            <div class="content">
                                <h4>{{ photo.description|default(photo.date_taken|date("m/d/Y Ã  H:m")) }}</h4>
                                <p>{{ photo.date_taken | timeago }}</p>
                            </div>

                            <span class="buttons">
                                <button class="btn btn-sm btn-default" href="#"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Modifier</button>
                                <button class="btn btn-sm btn-danger" href="#"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span> Supprimer</button>
                            </span>
                        </div>
                    {% endfor %}
                </div>

        </div>
    </div>
{% endblock %}
